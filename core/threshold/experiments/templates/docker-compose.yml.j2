version: '3'
services:
{% for i in range(n_parties) %}
  p{{ i+1 }}:
    image: ddec:latest
    cap_add:
      - NET_ADMIN
    command:
      - "moby"
    environment:
      - RUN_MODE=dev
      - RUST_LOG=distributed_decryption=debug,moby=info
      - NO_COLOR=true
      - DDEC_PROTOCOL_HOST_ADDRESS=p{{ i+1 }}
      - DDEC_PROTOCOL_HOST_PORT=50000
      - DDEC_PROTOCOL_HOST_ID={{ i+1 }}
      - DDEC_PROTOCOL_HOST_CHOREOPORT=60000
      - DDEC_TRACING_SERVICE_NAME=moby-party-{{ i+1 }}
      - DDEC_TRACING_ENDPOINT=http://jaeger:4317
      - DDEC_REDIS_HOST=redis://redis-p{{ i+1 }}:6379
      - DDEC_CERTPATHS_CERT=/app/ddec/certs/cert_p{{ i+1 }}-core1.pem
      - DDEC_CERTPATHS_KEY=/app/ddec/certs/key_p{{ i+1 }}-core1.pem
      - DDEC_CERTPATHS_CALIST={% for j in range(n_parties) %}/app/ddec/certs/cert_p{{ j+1 }}.pem,{% endfor %}
      - DDEC_CHOREO_USE_TLS=false
    volumes:
      - ../parameters:/app/ddec/parameters
      - ../test_certs:/app/ddec/certs
    ports:
      - {{ 50000 + i+1 }}:50000
      - {{ 60000 + i+1 }}:60000
    healthcheck:
      test: "grpc-health-probe --addr=localhost:50000"
      interval: 5s
      timeout: 5s
      retries: 20
      start_period: 20s
  redis-p{{ i+1 }}:
    image: redis/redis-stack:latest
    ports:
      - {{6379 + i+1}}:6379
{% endfor %}
  jaeger:
    image: jaegertracing/all-in-one:${JAEGER_VERSION:-latest}
    ports:
      - "16686:16686"
      - "4317:4317"
    environment:
      - LOG_LEVEL=error

