storage_folder = "temp"
session_file = "{{ experiment_name }}.bin"
params_file = "parameters/small_test_params.json"
decrypt_mode = "{{ decrypt_mode }}"
number_messages = {{ number_messages }}
witness_dim = {{ witness_dim }}
epoch_id = {{ epoch_id }}
# Note: The outcommented lines are kept as an example of how to enable TLS on the mobygo side
# cert_file = "test_certs/cert_p1-core1.pem"
# key_file = "test_certs/key_p1-core1.pem"
# ca_file = "test_certs/cert_combined.pem"

[threshold_topology]
threshold = {{ threshold }}
peers = [
    {% for i in range(n_parties) %}
    { physical_address = "localhost", logical_address = "p{{ i+1 }}", physical_port = {{ 50000 + i + 1 }}, logical_port = 50000, choreo_physical_port = {{ 60000 + i + 1 }}, choreo_logical_port = 60000, id = {{ i+1 }}, use_tls = true },
    {% endfor %}
]
